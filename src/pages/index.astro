---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

const supportedApps = [
  {
    name: 'VS Code',
    icon: '/images/vscode-gruvbox.svg',
    link: '/install/vscode'
  },
  {
    name: 'iTerm2',
    icon: '/images/iterm2-gruvbox.svg',
    link: '/install/iterm2'
  }
];
---

<Layout title="Gruvbox Theme - Supported Applications">
  <h1 class="text-4xl font-bold text-gruvbox-yellow text-center my-8">Gruvbox</h1>
  <p class="text-xl text-center mb-12">Choose your application to get started with Gruvbox</p>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
    {supportedApps.map(app => (
      <Card name={app.name} icon={app.icon} link={app.link} />
    ))}
  </div>
</Layout>
